<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>{{person.Rank}} {{person.Name}}</title>
    <style media="screen">
    body {
      max-width: 800px;
      margin: auto;
      padding-top: 20px;
      font-family: monospace;
    }
      .leave-box {
        border: 1px solid lavender;
        padding: 20px;
        margin: 0px;
        background: lightgray;
        border-radius: 3px;
      }

      .maj-btn {
        margin-top: 15px;
        padding: 6px 11px;
        background: lightcyan;
        border: 1px solid lightgrey;
        border-radius: 3px;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <p>Name: {{person.Rank}} {{person.Name}}</p>
    <p>Addl Days: {{person.addlDays}}</p>
    <p>P Leave: {{person.[P Lve]}}</p>
    <p>Leave:</p>
    {{#each person.leave}}
    <div class="leave-box">
      <p id="type">Leave Type: {{leaveType}}</p>
      <p id="start">Start: {{start}}</p>
      <p id="end">End: {{end}}</p>
      <p id="specialDays">Special Days: {{specialDays}}</p>
      <button type="button" name="button" class="small-btn">Edit</button>
    </div>

    {{/each}}

    <button type="button" name="button" class="maj-btn">Edit major details</button>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="  crossorigin="anonymous"></script>
    <script type="text/javascript">

    $(document).on("click", ".small-btn", function () {
        console.log(typeof Object.values($(this).closest('div').find('p')), $(this).closest('div').find('p'));
    });

    </script>
  </body>
</html>
